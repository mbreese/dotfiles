#!/bin/bash
for dir in env venv; do 
    if [ -e ./$dir/bin/activate ]; then
        . ./$dir/bin/activate
    fi
done

if [[ "$1" == "" && "$(which ipython 2>/dev/null )" != "" ]]; then
    ipython
else
#    ARGS=()
#    i=0
#    for arg in "$@"; do
#        ARGS[$i]="$arg"
#        ((++i))
#    done

    python "$@"
fi

