#!/bin/sh
for dir in env venv; do 
    if [ -e ./$dir/bin/activate ]; then
        . ./$dir/bin/activate
    fi
done

if [ "$1" == "" ]; then
    if [ "$(which ipython 2>/dev/null )" != "" ]; then
        exec ipython
    fi
else
#    ARGS=()
#    i=0
#    for arg in "$@"; do
#        ARGS[$i]="$arg"
#        ((++i))
#    done

    python "$@"
fi

